{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "jsx": "react",
    "strict": true,
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "downlevelIteration": true,
    "allowJs": false,
    "declaration": true,
    "declarationDir": "dist",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "example",
    "rollup.config.js"
  ],
  "include": [
    "src"
  ]
}
